<Window x:Class="Scheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        xmlns:vm="clr-namespace:Scheduler.ViewModel"
        xmlns:c="clr-namespace:Scheduler"
        mc:Ignorable="d ignore"
        Height="600"
        Width="600"
        Title="Task List"
        DataContext="{Binding Main, Source={StaticResource ToDoListVM}}">

    <DockPanel>
        <Ribbon DockPanel.Dock="Top" Margin="0,-22,0,0">
            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu>
                    <RibbonApplicationMenu.AuxiliaryPaneContent>
                        <RibbonGallery ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <RibbonGalleryCategory MaxColumnCount="1">
                                <RibbonGalleryItem x:Name="GalleryItem1" Content="Application menu content" 
                                MouseOverBackground="Transparent"
                                MouseOverBorderBrush="Transparent"
                                CheckedBackground="Transparent"
                                CheckedBorderBrush="Transparent"
                                               />
                                <RibbonGalleryItem>
                                    <Hyperlink>
                                        <Run Text="http://www.github.com/hebertn87"/>
                                    </Hyperlink>
                                </RibbonGalleryItem>
                            </RibbonGalleryCategory>
                        </RibbonGallery>
                    </RibbonApplicationMenu.AuxiliaryPaneContent>
                    <RibbonApplicationMenuItem x:Name="menuItem1" Header="Add"/>
                    <RibbonApplicationMenuItem x:Name="menuItem2" Header="Settings"/>

                </RibbonApplicationMenu>
            </Ribbon.ApplicationMenu>

            <RibbonTab x:Name="rbnTab1" Header="Tab1">
                <RibbonGroup x:Name="rbnGr1" Header="General">
                    <RibbonButton x:Name="btnRibbon1" Label="Save" />
                    <RibbonButton x:Name="btnRibbon2" Label="Open" />
                </RibbonGroup>
                <RibbonGroup x:Name="rbnGr2" Header="New group">
                    <RibbonButton x:Name="btnRibbon3" Label="Font" />
                    <RibbonButton x:Name="btnRibbon4" Label="Delete" />
                </RibbonGroup>
            </RibbonTab>
            <RibbonTab x:Name="rbnTab2" Header="Tab2">
                <RibbonGroup x:Name="rbnGr3" Header="Other Group">
                    <RibbonButton x:Name="btnRibbon5" Label="Play" />
                    <RibbonButton x:Name="btnRibbon6" Label="List" />
                </RibbonGroup>
                <RibbonGroup x:Name="rbnGr4" Header="What a group">
                    <RibbonButton x:Name="btnRibbon7" Label="Sleep" />
                    <RibbonButton x:Name="btnRibbon8" Label="Add" />
                </RibbonGroup>
            </RibbonTab>
        </Ribbon>

        <TreeView DockPanel.Dock="Left">
            <TreeViewItem Header="Group 1">
                <TreeViewItem Header="Item 1"/>
                <TreeViewItem Header="Item 2"/>
                <TreeViewItem Header="Item 3"/>
                <TreeViewItem Header="Item 4"/>
                <TreeViewItem Header="Item 5"/>
            </TreeViewItem>
        </TreeView>

        <Grid DockPanel.Dock="Top">

            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DataGrid ItemsSource="{Binding ToDoItem}" HorizontalAlignment="Center" VerticalAlignment="Center" Name="taskListDataGrid">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Task Name" Binding="{Binding Name, ValidatesOnDataErrors=True}" />
                    <DataGridTextColumn Header="Description" Binding ="{Binding Desc, ValidatesOnDataErrors=True}" />
                    <DataGridTextColumn Header="Time done by" Binding="{Binding DoneBy, ValidatesOnDataErrors=True}"/>
                    <DataGridTextColumn Header="Check Done"/>
                </DataGrid.Columns>

                <DataGrid.RowDetailsTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ToDoItem}"/>
                    </DataTemplate>
                </DataGrid.RowDetailsTemplate>
            </DataGrid>


            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="*" MinWidth="100"/>
                </Grid.ColumnDefinitions>

                <TextBlock HorizontalAlignment="Center" Text="Name" Grid.Column="0"/>
                <TextBlock HorizontalAlignment="Center" Text="Description" Grid.Column="1"/>
                <TextBlock HorizontalAlignment="Center" Text="Date and Time" Grid.Column="2"/>

            </Grid>
        </Grid>
        
        <Expander MaxHeight="100" Header="Expand Add Task text boxes" DockPanel.Dock="Bottom">
            <Grid MaxHeight="100">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="*" MinWidth="100"/>
                </Grid.ColumnDefinitions>


                <Grid Grid.Column="0" x:Name="Name">

                    <TextBox Text="{Binding Path=Name}"/>
                </Grid>
                <Grid Grid.Column="1" x:Name="Desc">
                    <TextBox Text="{Binding Path=Desc}"/>
                </Grid>
                <Grid Grid.Column="2" x:Name="DoneBy">
                    <DatePicker Text="{Binding Path=DoneBy}"/>
                </Grid>
                <Button Grid.Column="4" Content="Add To Do" Command="{Binding CreateToDoCommand}" CommandParameter="{Binding}">
                    <Button.ToolTip>
                        <ToolTip>
                            <StackPanel>
                                <TextBlock FontWeight="Bold">Add a To-Do To the list</TextBlock>
                                <TextBlock>Submits a to-do list to the grid.</TextBlock>
                            </StackPanel>
                        </ToolTip>
                    </Button.ToolTip>
                </Button>
            </Grid>
        </Expander>
    </DockPanel>
</Window>
