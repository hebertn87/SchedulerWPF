<Window x:Class="Scheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        xmlns:vm="clr-namespace:Scheduler.ViewModel"
        xmlns:c="clr-namespace:Scheduler"
        mc:Ignorable="d ignore"
        Height="600"
        Width="600"
        Title="Task List"
        DataContext="{Binding Main, Source={StaticResource ToDoListVM}}">

    <Window.Resources>
        <vm:DateToStringConverter x:Key="DateToStringConverter"/>
    </Window.Resources>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock HorizontalAlignment="Center" Grid.Column="0" Text="Task Name"/>
            <TextBlock HorizontalAlignment="Center" Grid.Column="1" Text="Description"/>
            <TextBlock HorizontalAlignment="Center" Grid.Column="2" Text="Date and Time"/>
            <TextBlock HorizontalAlignment="Center" Grid.Column="3" Text="Done"/>

            <ItemsControl ItemsSource="{Binding ToDoItem}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Grid.Column="0" Text="{Binding Path=Name, ValidatesOnDataErrors=True}"/>
                            <TextBlock Grid.Column="1" Text="{Binding Path=Desc, ValidatesOnDataErrors=True}"/>
                            <TextBlock Grid.Column="2" Text="{Binding Path=DoneBy, ValidatesOnDataErrors=True, Converter={StaticResource DateToStringConverter}, StringFormat={}{dd:t}}"/>
                            <CheckBox Grid.Column="3" IsChecked="{Binding Path=IsDone, ValidatesOnDataErrors=True}"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

            </ItemsControl>
        </Grid>
            
        <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="*" MinWidth="100"/>
                </Grid.ColumnDefinitions>
                
            <Grid Grid.Column="0" x:Name="Name">
                <TextBox Text="{Binding Path=Name}"/>
            </Grid>
            <Grid Grid.Column="1" x:Name="Desc">
                <TextBox Text="{Binding Path=Desc}"/>
            </Grid>
            <Grid Grid.Column="2" x:Name="DoneBy">
                <TextBox Text="{Binding Path=DoneBy}"/>
            </Grid>
                
            <Grid Grid.Column="3" x:Name="IsDone">
                <CheckBox HorizontalAlignment="Center" IsChecked="{Binding Path=IsDone}"/>
            </Grid>

            <Button Grid.Column="4" Content="Add To Do" Command="{Binding CreateToDoCommand}" CommandParameter="{Binding}"/>
            </Grid>
        </Grid>
</Window>
