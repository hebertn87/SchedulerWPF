<Window x:Class="Scheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        xmlns:vm="clr-namespace:Scheduler.ViewModel"
        xmlns:c="clr-namespace:Scheduler"
        mc:Ignorable="d ignore"
        Height="600"
        Width="600"
        Title="MVVM Light Application"
        DataContext="{Binding Main, Source={StaticResource Locator}}">

    <Window.Resources>
        <vm:DateToStringConverter x:Key="DateToStringConverter"/>
    </Window.Resources>

    <DataGrid ItemsSource="{Binding Source={StaticResource Locator}}">
        <DataGrid.Columns>
            <DataGridTextColumn x:Name="Name" Header="Name" Binding="{Binding Path=ToDo.Name, ValidatesOnDataErrors=True}"/>
            <DataGridTextColumn x:Name="Desc" Header="Description" Binding="{Binding Path=Desc, ValidatesOnDataErrors=True}"/>
            <DataGridTextColumn x:Name="DoneBy" Header="Done By Date" Binding="{Binding DoneBy, ValidatesOnDataErrors=True, Converter={StaticResource DateToStringConverter}, StringFormat={}{0:t}}"/>
            <DataGridTextColumn x:Name="IsDone" Header="Done?" Binding="{Binding Path=isDone, ValidatesOnDataErrors=True}"/>
        </DataGrid.Columns>
        <DataGrid.ItemTemplate>
            <DataTemplate>
                <StackPanel>
                    <TextBlock Text="{Binding Path=Name}"/>
                    <TextBlock Text="{Binding Path=Desc}"/>
                    <TextBlock Text="{Binding Path=DoneBy}"/>
                    <TextBlock Text="{Binding Path=IsDone}"/>
                </StackPanel>
            </DataTemplate>
        </DataGrid.ItemTemplate>
    </DataGrid>
</Window>
